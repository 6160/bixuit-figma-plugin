{
  "compilerOptions": {
    "target": "esnext",
    "typeRoots": ["./src/typings"],
    "outDir": "./dist",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node", "webpack-env", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*.ts*",
    "src/**/*.tsx*",
    "src/**/*.vue",
    "tests/**/*.ts*",
    "tests/**/*.tsx*"
  ],
  "exclude": ["node_modules"]
}
